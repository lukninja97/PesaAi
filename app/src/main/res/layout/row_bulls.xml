<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCowBalanced"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:src="@drawable/ic_coww"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/icTag"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_tag"
        app:layout_constraintBottom_toTopOf="@+id/tvTag"
        app:layout_constraintEnd_toEndOf="@+id/tvTag"
        app:layout_constraintStart_toStartOf="@+id/tvTag"
        app:layout_constraintTop_toTopOf="@+id/imgCowBalanced" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/imgCowBalanced"
        app:layout_constraintEnd_toStartOf="@+id/tvWeight"
        app:layout_constraintStart_toEndOf="@id/imgCowBalanced"
        app:layout_constraintTop_toBottomOf="@+id/icTag" />

    <ImageView
        android:id="@+id/icWeight"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_weight"
        app:layout_constraintBottom_toTopOf="@+id/tvWeight"
        app:layout_constraintEnd_toEndOf="@+id/tvWeight"
        app:layout_constraintStart_toStartOf="@+id/tvWeight"
        app:layout_constraintTop_toTopOf="@+id/imgCowBalanced" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="225"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/imgCowBalanced"
        app:layout_constraintEnd_toStartOf="@+id/tvArroba"
        app:layout_constraintStart_toEndOf="@+id/tvTag"
        app:layout_constraintTop_toBottomOf="@+id/icWeight" />

    <ImageView
        android:id="@+id/imgArroba"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="5dp"
        android:src="@drawable/ic_arroba"
        app:layout_constraintBottom_toTopOf="@+id/tvArroba"
        app:layout_constraintEnd_toEndOf="@+id/tvArroba"
        app:layout_constraintStart_toStartOf="@+id/tvArroba"
        app:layout_constraintTop_toTopOf="@id/imgCowBalanced" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvArroba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/imgCowBalanced"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvWeight"
        app:layout_constraintTop_toBottomOf="@+id/imgArroba" />

</androidx.constraintlayout.widget.ConstraintLayout>