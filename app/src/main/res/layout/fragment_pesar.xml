<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        tools:context=".view.WeightFragment">

        <ImageView
            android:id="@+id/imgFarm"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:src="@drawable/ic_farm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Fazenda"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgFarm"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            app:layout_constraintStart_toEndOf="@+id/imgFarm"
            app:layout_constraintTop_toBottomOf="@+id/tvFarm" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/icLocation"
            app:layout_constraintStart_toEndOf="@+id/icLocation"
            app:layout_constraintTop_toTopOf="@+id/icLocation" />

        <ImageView
            android:id="@+id/imgProprietary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dono"
            app:layout_constraintStart_toEndOf="@+id/imgFarm"
            app:layout_constraintTop_toBottomOf="@+id/icLocation" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProprietary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proprietário"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgProprietary"
            app:layout_constraintStart_toEndOf="@+id/imgProprietary"
            app:layout_constraintTop_toTopOf="@+id/imgProprietary" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDateBalance"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFarm">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:hint="Data Pesagem"
                android:inputType="date" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFarm"
            app:startIconDrawable="@drawable/ic_dono">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:hint="Funcionario"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFinality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilEmployee">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:hint="Finalidade da pesagem"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCowBalanced"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tilCowTag"
            app:layout_constraintEnd_toStartOf="@id/tilCowWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilFinality"
            tools:listitem="@layout/row_bulls" />

        <ImageView
            android:id="@+id/imgCow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_coww"
            app:layout_constraintBottom_toTopOf="@+id/tvCowsBalanced"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvCowBalanced"
            app:layout_constraintTop_toBottomOf="@+id/tilFinality" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCowsBalanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/imgWeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvCowBalanced"
            app:layout_constraintTop_toBottomOf="@+id/imgCow" />

        <ImageView
            android:id="@+id/imgWeight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_weight"
            app:layout_constraintBottom_toTopOf="@+id/tvMiddleWeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvCowBalanced"
            app:layout_constraintTop_toBottomOf="@+id/tvCowsBalanced" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMiddleWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso Médio"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/imgArroba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvCowBalanced"
            app:layout_constraintTop_toBottomOf="@+id/imgWeight" />

        <ImageView
            android:id="@+id/imgArroba"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arroba"
            app:layout_constraintBottom_toTopOf="@+id/tvMiddleArroba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvCowBalanced"
            app:layout_constraintTop_toBottomOf="@+id/tvMiddleWeight" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMiddleArroba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arroba Média"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnFinishBalance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvCowBalanced"
            app:layout_constraintTop_toBottomOf="@+id/imgArroba" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinishBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:backgroundTint="@color/md_theme_primary"
            android:text="Finalizar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rvCowBalanced"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMiddleArroba" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCowTag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnToWeight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tilCowWeight"
            app:layout_constraintTop_toBottomOf="@+id/rvCowBalanced"
            app:startIconDrawable="@drawable/ic_tag">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:hint="Brinco"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCowWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/btnToWeight"
            app:layout_constraintLeft_toRightOf="@+id/tilCowTag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvCowBalanced"
            app:startIconDrawable="@drawable/ic_weight">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:hint="Peso (Kg)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_primary"
            android:text="Pesar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>