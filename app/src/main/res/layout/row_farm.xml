<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/id_fazenda"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/fazenda"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tvFarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/id_fazenda"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:text="Fazenda"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ic_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toEndOf="@+id/id_fazenda"
        app:layout_constraintTop_toBottomOf="@+id/tvFarm" />

    <TextView
        android:id="@+id/tvLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ic_local"
        app:layout_constraintTop_toTopOf="@+id/ic_local"
        app:layout_constraintBottom_toBottomOf="@+id/ic_local"
        android:text="Local"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imgProprierty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/id_fazenda"
        app:layout_constraintTop_toBottomOf="@+id/ic_local"
        android:src="@drawable/ic_dono" />

    <TextView
        android:id="@+id/tvEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imgProprierty"
        app:layout_constraintTop_toTopOf="@+id/imgProprierty"
        app:layout_constraintBottom_toBottomOf="@+id/imgProprierty"
        android:text="ProprietÃ¡rio"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>